<div class="container text-center mt-5">
<h1>Eat-Da-Burger!</h1>
<br>
<img src="/assets/img/burger_icon.png" class="img-fluid" alt="Responsive image">
<div class="row mx-auto">
  <div class="col-6">
<h2>Burgers that Need to be DEVOURED!</h2>
<div class="card uneaten mt-3 mb-2">
  <div class="card-body">
    <ul>
   {{#each burgers}}
    {{#unless this.devoured}}
   
  <p>
   
      {{this.id}}
      {{this.burger_name}}
      <form action="burgers/update/{{this.id}}?_method=PUT" method"POST">
      <input type="hidden" name="devoured" value="false">
      <button data-burgerid="{{this.id}}" class="devburger">Devour!</button>

      </form>
      </p>
      
    {{/unless}}
  {{/each}}
</ul>
  </div>
</div>
</div>

<div class="col-6">
<h2>Burgers that have been DEVOURED!</h2>
<div class="card eaten mt-3 mb-2">
  <div class="card-body">
    <ul>
   {{#each burgers}}
   
  <p>
    {{#if devoured}}
      {{this.id}}
      {{this.burger_name}}
      </p>
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
</div>
</div>


<div class = "row">
<div class="col-12 mx-auto">
<div class="burgeraddDiv mt-3 mb-5">
<h2>Add a Burger:</h2>
<p id="instructions">Enter a burger you want to eat, then click the "Submit Burger!" button</p>
<form id="addburger" class="button-size">
	<textarea type="text" name="burger"></textarea>
  <br>
	<button type="submit">Submit Burger!</button>
</form>
</div>
</div>
</div>
</div>

